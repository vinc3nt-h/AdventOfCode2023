{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2015",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2018", "dom"],
      "types": ["node"],
      "esModuleInterop": true,
      "paths": {},
      "allowImportingTsExtensions": true
    },
    "ts-node": {
      "esm": true
    },
    "paths": {
      "common/*": ["./src/common/*"],
  },
    "include": ["src/**/*", "types/*.d.ts"],
    "exclude": ["node_modules", "build", "dist", "assets"],
    "lib": ["esnext"]
  }